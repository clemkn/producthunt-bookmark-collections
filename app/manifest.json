{
    "name": "Product Hunt Bookmark Collections",
    "description": "Bookmark and save your favorite collections",
    "version": "0.0.2",
    "manifest_version": 2,
    "icons": {
        "19": "icons/icon-19.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/storage.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.producthunt.com/*/collections/*",
                "http://www.producthunt.com/e/*"
            ],
            "js": [
                "js/jquery.min.js",
                "js/inject.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_popup": "popup.html"
    }
}